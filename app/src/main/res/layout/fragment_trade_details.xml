<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/discount_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_rectangle_border_5_purble"
            app:layout_constraintBottom_toBottomOf="@+id/discount"
            app:layout_constraintEnd_toStartOf="@+id/quantity_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/quantity_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_rectangle_border_5_purble"
            app:layout_constraintBottom_toBottomOf="@+id/quantity"
            app:layout_constraintEnd_toStartOf="@+id/exp_background"
            app:layout_constraintStart_toEndOf="@+id/discount_background"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/exp_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/ic_rectangle_border_5_purble"
            app:layout_constraintBottom_toBottomOf="@+id/expire_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/quantity_background"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/discount_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="5dp"
            android:text="@string/discount"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/discount_background"
            app:layout_constraintStart_toStartOf="@+id/discount_background"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/discount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/titillium_web"
            android:paddingBottom="11dp"
            android:text="10/20"
            android:textColor="@color/green"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/discount_background"
            app:layout_constraintStart_toStartOf="@+id/discount_background"
            app:layout_constraintTop_toBottomOf="@+id/discount_label" />

        <TextView
            android:id="@+id/quantity_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="5dp"
            android:text="@string/discount"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/quantity_background"
            app:layout_constraintStart_toStartOf="@+id/quantity_background"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/titillium_web"
            android:paddingBottom="11dp"
            android:text="10/20"
            android:textColor="@color/green"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/quantity_background"
            app:layout_constraintStart_toStartOf="@+id/quantity_background"
            app:layout_constraintTop_toBottomOf="@+id/quantity_label" />

        <TextView
            android:id="@+id/exp_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="5dp"
            android:text="@string/exp_date"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/exp_background"
            app:layout_constraintStart_toStartOf="@+id/exp_background"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/expire_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/titillium_web"
            android:paddingBottom="11dp"
            android:text="10/20"
            android:textColor="@color/green"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/exp_background"
            app:layout_constraintStart_toStartOf="@+id/exp_background"
            app:layout_constraintTop_toBottomOf="@+id/exp_label" />

        <TextView
            android:id="@+id/total_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/titillium_web"
            android:includeFontPadding="false"
            android:text="10/20"
            android:textColor="@color/purble"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expire_date" />

        <TextView
            android:id="@+id/total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/titillium_web"
            android:includeFontPadding="false"
            android:text="10/20"
            android:textColor="@color/yellow"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/total_label" />

        <TextView
            android:id="@+id/insurance_fee_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/titillium_web"
            android:includeFontPadding="false"
            android:text="10/20"
            android:textColor="@color/purble"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/total" />

        <TextView
            android:id="@+id/insurance_fee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/titillium_web"
            android:includeFontPadding="false"
            android:text="10/20"
            android:textColor="@color/yellow"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/insurance_fee_label" />

        <TextView
            android:id="@+id/complete_order"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_rectangle_10_accent"
            android:fontFamily="@font/titillium_web"
            android:gravity="center"
            android:minHeight="40dp"
            android:text="Complete Order"
            android:textColor="@color/green"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/insurance_fee" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>