<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition android:id="@+id/collape_expand"
        app:constraintSetEnd="@+id/collapse"
        app:constraintSetStart="@+id/expand"
        app:duration="500"/>
    <ConstraintSet android:id="@+id/collapse">

        <Constraint
            android:id="@+id/trade_layout"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:layout_marginStart="40dp"
            android:layout_marginTop="0dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/expand">
<Constraint
         android:id="@+id/trade_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
    android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chartp"/>
    </ConstraintSet>
</MotionScene>